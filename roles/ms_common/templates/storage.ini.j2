[main]
retry_time = 5
retry_num = 20

[BasicElasticSearchStorage]
ENABLED = False
host = {% for es_host in groups['elasticsearch'] %}{{ es_host }}{% if not loop.last %},{% endif %}{% endfor %}
port = 9200
index = multiscanner_reports
doc_type = reports

[ElasticSearchStorage]
ENABLED = True
host = {% for es_host in groups['elasticsearch'] %}{{ es_host }}{% if not loop.last %},{% endif %}{% endfor %}
port = 9200
index = multiscanner_reports
metricbeat_enabled = {{ metricbeat_enabled }}
metricbeat_rollover_days = {{ metricbeat_rollover_days }}

[File]
ENABLED = False
path = report.json
gzip = False
files-per-line = 1

[MongoStorage]
ENABLED = False
host = localhost
port = 27017
database = multiscanner_reports
collection = reports
