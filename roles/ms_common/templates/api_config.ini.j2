[Database]
username = {{ postgres_user }}
password = {{ postgres_user_password }}
db_type = postgresql
db_name = {{ task_db_name }}
host_string ={{ groups.task_db[0] }}

[api]
host = {{ ms_rest_host }}
port = {{ ms_rest_port }}
upload_folder = {{ dfs_mount_dir }}
distributed = True
web_loc = "{% if servers_use_ssl == True %}https{% else %}http{% endif %}://{{ ms_web_host }}:{{ ms_web_port }}"

cors = "{{ ms_api_cors_regex }}(:d+)?"
batch_size = 100
batch_interval = 10
wait_seconds = 60


[celery]
protocol = pyamqp
host = {{ groups.task_broker[0] }}
user = {{ ms_rabbit_user }}
password = {{ ms_rabbit_password }}
vhost = {{ rabbit_task_primary_vhost }}
